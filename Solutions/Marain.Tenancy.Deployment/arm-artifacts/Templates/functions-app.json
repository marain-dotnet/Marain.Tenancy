{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "functionsAppName": {
      "type": "string",
      "minLength": 1
    },
    "appServicePlanName": {
      "type": "string",
      "minLength": 1
    },
    "storageName": {
      "type": "string",
      "minLength": 1
    },
    "storageAccountType": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "allowedValues": [
        "Standard_LRS",
        "Standard_GRS",
        "Standard_RAGRS"
      ],
      "metadata": {
        "description": "Storage Account type"
      }
    },
    "easyAuthAadClientId": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Enable EasyAuth for AAD using the specified Client ID/App ID"
      }
    },
    "defaultTags": {
      "type": "object",
      "defaultValue": {}
    },
    "functionsAppDescription": {
      "type": "string",
      "defaultValue": "Functions App"
    },
    "appServicePlanDescription": {
      "type": "string",
      "defaultValue": "Functions App Service Plan"
    },
    "storageAccountDescription": {
      "type": "string",
      "defaultValue": "Functions Storage Account"
    }
  },
  "variables": {
    "storageAccountid": "[concat(resourceGroup().id,'/providers/','Microsoft.Storage/storageAccounts/', parameters('storageName'))]",
    "storageAccountAdditionalTags": {
      "displayName": "FunctionsAppStorage",
      "serviceResourceDescription": "[parameters('storageAccountDescription')]"
    },
    "functionsAppAdditionalTags": {
      "displayName": "KeyVault",
      "serviceResourceDescription": "[parameters('functionsAppDescription')]"
    },
    "appServicePlanAdditionalTags": {
      "displayName": "KeyVault",
      "serviceResourceDescription": "[parameters('appServicePlanDescription')]"
    },
    "storageAccountTags": "[union(parameters('defaultTags'), variables('storageAccountAdditionalTags'))]",
    "functionsAppTags": "[union(parameters('defaultTags'), variables('functionsAppAdditionalTags'))]",
    "appServicePlanTags": "[union(parameters('defaultTags'), variables('appServicePlanAdditionalTags'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "name": "[parameters('storageName')]",
      "apiVersion": "2019-06-01",
      "location": "[resourceGroup().location]",
      "properties": {
        "accountType": "[parameters('storageAccountType')]"
      },
      "tags": "[variables('storageAccountTags')]"
    },
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2015-04-01",
      "name": "[parameters('appServicePlanName')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "name": "[parameters('appServicePlanName')]",
        "computeMode": "Dynamic",
        "sku": "Dynamic"
      },
      "tags": "[variables('appServicePlanTags')]"
    },
    {
      "type": "Microsoft.Web/sites",
      "kind": "functionapp",
      "name": "[parameters('functionsAppName')]",
      "apiVersion": "2016-03-01",
      "location": "[resourceGroup().location]",
      "identity": {
        "type": "SystemAssigned"
      },
      "tags": "[variables('functionsAppTags')]",
      "properties": {
        "siteConfig": {
          "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('appServicePlanName'))]",
          "appSettings": [
            {
              "name": "AzureWebJobsDashboard",
              "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', parameters('storageName'), ';AccountKey=', listKeys(variables('storageAccountid'),'2015-05-01-preview').key1)]"
            },
            {
              "name": "AzureWebJobsStorage",
              "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', parameters('storageName'), ';AccountKey=', listKeys(variables('storageAccountid'),'2015-05-01-preview').key1)]"
            },
            {
              "name": "WEBSITE_CONTENTAZUREFILECONNECTIONSTRING",
              "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', parameters('storageName'), ';AccountKey=', listKeys(variables('storageAccountid'),'2015-05-01-preview').key1)]"
            },
            {
              "name": "WEBSITE_CONTENTSHARE",
              "value": "[toLower(parameters('functionsAppName'))]"
            }
          ]
        }
      },
      "resources": [
        {
          "apiVersion": "2016-08-01",
          "name": "authsettings",
          "type": "config",
          "condition": "[not(empty(parameters('easyAuthAadClientId')))]",
          "dependsOn": [
            "[concat('Microsoft.Web/sites/', parameters('functionsAppName'))]"
          ],
          "properties": {
            "enabled": true,
            "unauthenticatedClientAction": "RedirectToLoginPage",
            "defaultProvider": "AzureActiveDirectory",
            "tokenStoreEnabled": true,
            "clientId": "[parameters('easyAuthAadClientId')]"
          }
        }
      ],
      "dependsOn": [
        "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageName'))]"
      ]
    }
  ],
  "outputs": {
    "storageAccountConnectionString": {
      "type": "string",
      "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', parameters('storageName'), ';AccountKey=', listKeys(variables('storageAccountid'),'2015-05-01-preview').key1)]"
    },
    "servicePrincipalId": {
      "type": "string",
      "value": "[reference(concat(resourceId('Microsoft.Web/sites', parameters('functionsAppName')), '/providers/Microsoft.ManagedIdentity/Identities/default'), '2018-11-30').principalId]"
    }
  }
}
